/* pages/personal/personal.wxss */
.avatar{
  width: 100%;
  height: 416rpx;
  background: #d9d3c6;
}
.avatar .edit {
  height: 78rpx;
  overflow: hidden;
}
.avatar .edit text {
  font-size: 13px;
  color: #948475;
  font-weight: bold;
  float: right;
  margin-right: 24rpx;
  margin-top: 36rpx;
}
.head-img{
  height:186rpx;
  width:186rpx;
  background:#fff;
  padding:10rpx;
  box-sizing:border-box;
  border-radius:50%;
  margin:0 auto;
}
.head-img image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}
.cell-item{
  width: 100%;
  font-size:14px;
  line-height: 70rpx;
  padding-left:30rpx;
  border-bottom: 1px solid #eee;
}
